#!/usr/bin/env bash
set -eufo pipefail
trap 'echo "$0: line ${LINENO}: exiting because of error";exit 1' ERR

while getopts "a:h" options; do case $options in
  a) a="$OPTARG" ;;
  h) exit ;;
esac; done; shift $((OPTIND - 1))

: ${a:="default for var a"}
: ${trace:=0}
if [[ "$trace" -eq 1 ]];then
  PS4='${LINENO}: '
  set -x
fi

if [[ "$#" -eq 0 ]];then
  :

elif [[ "$1" == "stdin" ]];then shift
  # -p file is a pipe
  if [[ -p /dev/stdin ]]; then
    echo "stdin:yes"
    stdin_content="$(cat)"
    echo "$stdin_content"
    $0 stdin </dev/null
  else
    echo "stdin:no"
  fi

else
  echo "unknown command: $@" >&2
  exit 1

fi

